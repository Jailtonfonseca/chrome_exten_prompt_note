{
  "manifest_version": 3,
  "name": "AI Prompt Studio",
  "version": "1.0.0",
  "description": "A personal hub to create, manage, and enhance AI prompts using the Gemini API.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://esm.sh; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com;"
  }
}
